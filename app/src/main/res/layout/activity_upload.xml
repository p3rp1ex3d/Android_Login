<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Upload">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="167dp"
        android:layout_height="64dp"
        android:layout_below="@id/upl_img"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="106dp"
        android:backgroundTint="#9E000000"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Upload Image"
        android:textAppearance="@style/Theme.Login"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/upl_img"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/baseline_image_24"
        android:visibility="visible"></ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="58dp"
        android:text="Click upload Image to view an image from your gallery!!"
        android:textColor="#252222"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_below="@id/button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="102dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</RelativeLayout>